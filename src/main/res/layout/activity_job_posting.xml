<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JobPosting">
    <TextView
        android:id="@+id/tv_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POST A JOB"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"/>
    <EditText
        android:id="@+id/et_jobType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_post"
        android:textSize="20sp"
        android:inputType="text"
        android:hint="Job Type :"/>
    <EditText
        android:id="@+id/et_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_jobType"
        android:textSize="20sp"
        android:inputType="number"
        android:hint="Salary :"/>
    <EditText
        android:id="@+id/et_timing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_salary"
        android:hint="Timing :"
        android:textSize="20sp"
        android:inputType="datetime"/>
    <EditText
        android:id="@+id/et_Place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_timing"
        android:textSize="20sp"
        android:inputType="text"
        android:hint="Place:"/>

</RelativeLayout>